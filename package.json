{
  "name": "redux-thunker",
  "version": "0.2.5",
  "description": "Redefined thunk middleware for redux",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src",
    "dist"
  ],
  "author": "Roman Nguyen <march08@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:commonjs && yarn build:umd && yarn build:umd:min",
    "clean": "rimraf lib dist es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:umd": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack",
    "build:umd:min": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack --optimize-minimize",
    "test": "jest",
    "lint": "eslint --ext .js,.jsx ./src",
    "prepare": "yarn build"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/march08/redux-thunker.git"
  },
  "homepage": "https://github.com/march08/redux-thunker",
  "keywords": [
    "redux",
    "thunk",
    "thunker",
    "middleware",
    "redux-middleware"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/*"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/jest/coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "rimraf": "^2.6.3",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3"
  }
}
